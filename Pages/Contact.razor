@page "/contact"
@inject IJSRuntime JSRuntime
@inject portfolio.Services.IEmailService EmailService
@inject IConfiguration Configuration
@using System.ComponentModel.DataAnnotations
@implements IAsyncDisposable

<PageTitle>Contact</PageTitle>

<div class="container-fluid py-3 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8 col-xxl-7">
            <!-- Header Section -->
            <div class="text-center mb-4 mb-md-5">
                <h1 class="display-5 display-md-4 fw-bold mb-2 mb-md-3">Get in Touch</h1>
                <p class="lead text-muted px-2">
                    Have a question or want to work together? I'd love to hear from you.
                </p>
            </div>

            <!-- Contact Form -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-3 p-sm-4 p-lg-5">
                    <h3 class="card-title mb-3 mb-md-4 h4 h-md-3">
                        <i class="bi bi-envelope me-2"></i>Send a Message
                    </h3>

                    <EditForm Model="@contactForm" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="row g-3 g-md-4">
                            <!-- Name and Email Row -->
                            <div class="col-12">
                                <div class="row g-3">
                                    <div class="col-12 col-sm-6">
                                        <label for="name" class="form-label fw-semibold">Name *</label>
                                        <InputText id="name" class="form-control form-control-lg" @bind-Value="contactForm.Name"
                                                   placeholder="Your full name" />
                                        <ValidationMessage For="@(() => contactForm.Name)" class="d-block mt-1" />
                                    </div>

                                    <div class="col-12 col-sm-6">
                                        <label for="email" class="form-label fw-semibold">Email *</label>
                                        <InputText id="email" type="email" class="form-control form-control-lg" @bind-Value="contactForm.Email"
                                                   placeholder="your.email@example.com" />
                                        <ValidationMessage For="@(() => contactForm.Email)" class="d-block mt-1" />
                                    </div>
                                </div>
                            </div>

                            <!-- Subject -->
                            <div class="col-12">
                                <label for="subject" class="form-label fw-semibold">Subject *</label>
                                <InputText id="subject" class="form-control form-control-lg" @bind-Value="contactForm.Subject"
                                           placeholder="What's this about?" />
                                <ValidationMessage For="@(() => contactForm.Subject)" class="d-block mt-1" />
                            </div>

                            <!-- Message -->
                            <div class="col-12">
                                <label for="message" class="form-label fw-semibold">Message *</label>
                                <InputTextArea id="message" class="form-control form-control-lg"
                                               rows="4" @bind-Value="contactForm.Message"
                                               placeholder="Your message here..."
                                               style="resize: vertical; min-height: 120px;" />
                                <ValidationMessage For="@(() => contactForm.Message)" class="d-block mt-1" />
                            </div>

                            <!-- Turnstile Captcha -->
                            <div class="col-12">
                                <div class="d-flex justify-content-center justify-content-sm-start">
                                    <div id="cf-turnstile" class="turnstile-container"></div>
                                </div>
                                @if (!string.IsNullOrEmpty(turnstileError))
                                {
                                    <div class="text-danger small mt-2">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        @turnstileError
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(turnstileToken))
                                {
                                    <div class="text-success small mt-2">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Security check completed
                                    </div>
                                }
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <div class="d-grid d-sm-flex justify-content-sm-start">
                                    <button type="submit" class="btn btn-primary btn-lg px-4 py-3 fw-semibold"
                                            disabled="@(isSubmitting || string.IsNullOrEmpty(turnstileToken))">
                                        @if (isSubmitting)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            <span>Sending...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-send me-2"></i>
                                            <span>Send Message</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(submitMessage))
                    {
                        <div class="alert @(submitSuccess ? "alert-success" : "alert-danger") mt-3 mt-md-4" role="alert">
                            <i class="bi @(submitSuccess ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                            @submitMessage
                        </div>
                    }
                </div>
            </div>

            <!-- Social Links - Below the form -->
            <div class="text-center mt-4 mt-md-5">
                <h5 class="mb-3 h6 h-md-5">
                    <i class="bi bi-share me-2"></i>Connect with me
                </h5>
                <div class="d-flex justify-content-center gap-2 gap-sm-3 flex-wrap">
                    <a href="https://linkedin.com/in/austin--massey" target="_blank"
                       class="btn btn-outline-primary social-btn" title="LinkedIn">
                        <i class="bi bi-linkedin"></i>
                        <span class="d-none d-sm-inline ms-2">LinkedIn</span>
                    </a>
                    <a href="https://github.com/atmassey" target="_blank"
                       class="btn btn-outline-dark social-btn" title="GitHub">
                        <i class="bi bi-github"></i>
                        <span class="d-none d-sm-inline ms-2">GitHub</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

