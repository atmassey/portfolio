@code {
    private ContactFormModel contactForm = new();
    private bool isSubmitting = false;
    private string submitMessage = "";
    private bool submitSuccess = false;
    private string turnstileToken = "";
    private string turnstileError = "";
    private string? turnstileSiteKey;
    private string? currentTheme;
    private object? turnstileWidgetId;

    protected override Task OnInitializedAsync()
    {
        turnstileSiteKey = Configuration["Turnstile:SiteKey"];
        if (string.IsNullOrEmpty(turnstileSiteKey))
        {
            turnstileError = "Turnstile site key not configured";
        }

        return Task.CompletedTask;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !string.IsNullOrEmpty(turnstileSiteKey))
        {
            await InitializeTurnstile();
        }
    }

    private async Task InitializeTurnstile()
    {
        try
        {
            // Get current theme
            currentTheme = await JSRuntime.InvokeAsync<string>("eval", "getPreferredTheme()");
            var theme = currentTheme == "dark" ? "dark" : "light";

            // Render Turnstile widget
            turnstileWidgetId = await JSRuntime.InvokeAsync<object>("turnstileHelpers.render",
                turnstileSiteKey, theme, "OnTurnstileCallback");
        }
        catch (Exception)
        {
            turnstileError = "Failed to initialize security check";
            await InvokeAsync(StateHasChanged);
        }
    }

    [JSInvokable("OnTurnstileCallback")]
    public async Task OnTurnstileCallback(string? token)
    {
        turnstileToken = token ?? "";
        turnstileError = string.IsNullOrEmpty(token) ? "Security check failed. Please try again." : "";

        // Force UI update
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(turnstileToken))
        {
            turnstileError = "Please complete the security check";
            return;
        }

        isSubmitting = true;
        submitMessage = "";
        turnstileError = "";

        try
        {
            // Here you can verify the turnstile token on your server if needed
            var success = await EmailService.SendEmailAsync(
                contactForm.Name,
                contactForm.Email,
                contactForm.Subject,
                contactForm.Message);

            if (success)
            {
                submitSuccess = true;
                submitMessage = "Thank you for your message! I'll get back to you soon.";
                contactForm = new ContactFormModel();

                // Reset Turnstile
                if (turnstileWidgetId != null)
                {
                    await JSRuntime.InvokeVoidAsync("turnstileHelpers.reset", turnstileWidgetId);
                    turnstileToken = "";
                }
            }
            else
            {
                submitSuccess = false;
                submitMessage = "Sorry, there was an error sending your message. Please try again.";
            }
        }
        catch (Exception)
        {
            submitSuccess = false;
            submitMessage = "Sorry, there was an error sending your message. Please try again.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (turnstileWidgetId != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("turnstileHelpers.remove", turnstileWidgetId);
            }
            catch
            {
                // Ignore cleanup errors
            }
        }
    }

    public class ContactFormModel
    {
        [Required(ErrorMessage = "Name is required")]
        [StringLength(100, ErrorMessage = "Name cannot exceed 100 characters")]
        public string Name { get; set; } = "";

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Subject is required")]
        [StringLength(200, ErrorMessage = "Subject cannot exceed 200 characters")]
        public string Subject { get; set; } = "";

        [Required(ErrorMessage = "Message is required")]
        [StringLength(1000, ErrorMessage = "Message cannot exceed 1000 characters")]
        [MinLength(10, ErrorMessage = "Message must be at least 10 characters")]
        public string Message { get; set; } = "";
    }
}