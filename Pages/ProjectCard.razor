@using portfolio.Models

<div class="card project-card h-100 shadow-sm">
    <div class="project-image">
        <i class="@Project.Icon"></i>
    </div>
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0">@Project.Title</h5>
            <span class="badge @(Project.Status == "Active" ? "bg-success" : "bg-secondary") ms-2">
                @Project.Status
            </span>
        </div>
        <p class="card-text text-muted mb-3">@Project.Description</p>

        <div class="project-tech-stack mb-3">
            @foreach (var tech in Project.Technologies)
            {
                <span class="tech-badge">@tech</span>
            }
        </div>

        <div class="mt-auto">
            <div class="project-links">
                @if (!string.IsNullOrEmpty(Project.GitHubUrl))
                {
                    <a href="@Project.GitHubUrl" target="_blank" class="project-link bg-dark text-white" title="View on GitHub">
                        <i class="bi bi-github"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Project.LiveUrl))
                {
                    <a href="@Project.LiveUrl" target="_blank" class="project-link bg-primary text-white" title="View Live Demo">
                        <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public required ProjectModel Project { get; set; }
}