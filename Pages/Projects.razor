@page "/projects"
@using System.Linq
@using portfolio.Models

<PageTitle>Projects</PageTitle>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">My Projects</h1>
                <p class="lead text-muted">
                    A collection of projects I've worked on, showcasing automation, development, and problem-solving skills.
                </p>
            </div>

            <!-- Filter/Category Section (Optional) -->
            <div class="text-center mb-4">
                <div class="btn-group" role="group">
                    <button type="button" class="btn @(selectedCategory == "All" ? "btn-primary" : "btn-outline-primary")"
                    @onclick="@(() => FilterProjects("All"))">
                        All
                    </button>
                    <button type="button" class="btn @(selectedCategory == "Industrial Automation" ? "btn-primary" : "btn-outline-primary")"
                    @onclick="@(() => FilterProjects("Industrial Automation"))">
                        Industrial Automation
                    </button>
                    <button type="button" class="btn @(selectedCategory == "Web" ? "btn-primary" : "btn-outline-primary")"
                    @onclick="@(() => FilterProjects("Web"))">
                        Web Development
                    </button>
                    <button type="button" class="btn @(selectedCategory == "DevOps" ? "btn-primary" : "btn-outline-primary")"
                    @onclick="@(() => FilterProjects("DevOps"))">
                        DevOps
                    </button>
                    <button type="button" class="btn @(selectedCategory == "Hobby" ? "btn-primary" : "btn-outline-primary")"
                    @onclick="@(() => FilterProjects("Hobby"))">
                        Hobby
                    </button>
                </div>
            </div>

            <!-- Projects Grid -->
            <div class="row g-4">
                @foreach (var project in filteredProjects)
                {
                    <div class="col-lg-4 col-md-6">
                        <ProjectCard Project="@project" />
                    </div>
                }
            </div>

            @if (!filteredProjects.Any())
            {
                <div class="text-center mt-5">
                    <i class="bi bi-folder2-open display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No projects found</h4>
                    <p class="text-muted">Try selecting a different category.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .project-card {
    height: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
    overflow: hidden;
    }

    .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0,0,0,0.15) !important;
    }

    .project-image {
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 3rem;
    position: relative;
    overflow: hidden;
    }

    .project-tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    }

    .tech-badge {
    background-color: #f8f9fa;
    color: #495057;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    border: 1px solid #dee2e6;
    }

    .project-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    }

    .project-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .project-link:hover {
    transform: scale(1.1);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    /* Dark mode styles */
    [data-bs-theme="dark"] .project-card {
    background-color: #343a40;
    border: 1px solid #495057;
    }

    [data-bs-theme="dark"] .tech-badge {
    background-color: #495057;
    color: #f8f9fa;
    border-color: #6c757d;
    }

    [data-bs-theme="dark"] .project-image {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
</style>

