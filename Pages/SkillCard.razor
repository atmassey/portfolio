@using portfolio.Models

<div class="skill-card">
    <div class="skill-icon" style="color: @Skill.Color;">
        <i class="@Skill.Icon"></i>
    </div>
    <div class="skill-info">
        <h6 class="skill-name">@Skill.Name</h6>
        <div class="skill-level">
            @for (int i = 1; i <= 4; i++)
            {
                <div class="level-dot @(i <= (int)Skill.Level ? "active" : "")" style="--skill-color: @Skill.Color;"></div>
            }
        </div>
        @if (!string.IsNullOrEmpty(Skill.Description))
        {
            <p class="skill-description">@Skill.Description</p>
        }
    </div>
</div>

@code {
    [Parameter] public required SkillModel Skill { get; set; }
}